# Use the official Tomcat base image with Alpine Linux
FROM tomcat:9.0.54-jdk11-openjdk-alpine

# Maintainer
LABEL MAINTAINER vdr007

# Copy your war file into the webapps directory
COPY your-application.war /usr/local/tomcat/webapps/

# Expose the default Tomcat port
EXPOSE 8080

# Start Tomcat
CMD ["catalina.sh", "run"]
